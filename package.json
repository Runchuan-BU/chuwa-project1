{
  "name": "chuwa_project1",
  "version": "1.0.0",
  "description": "Modern Node.js + React E-commerce Application",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev-simple",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules",
    "update": "npm update && cd backend && npm update && cd ../frontend && npm update"
  },
  "keywords": ["nodejs", "react", "ecommerce", "fullstack", "express", "mongodb"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 